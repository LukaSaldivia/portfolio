---
let {src, name, href, descr, clr} = Astro.props
src = "img/" + src
const clr_t = clr + "55"
---

<a href={href} class="outer-card" target="_blank">
  <div class="inner-card" style={"--_clr: "+clr+"; --_clr-t: "+clr_t+";"}>
    <header>
      <h3>{name}</h3>
      <p>{descr}</p>
    </header>
    <div class="wrapper-img">
    <img src={src} alt={"Imagen del proyecto" + name} aria-hidden="true">
  </div>
  </div>
</a>
<style>



  .outer-card, .inner-card{
    position: relative;
    --_padding : .4rem;
    padding: var(--_padding);
    border-radius: var(--_radius);
    border: 1px solid #333;
    text-decoration: none;
    color: initial;
  }
  .outer-card{
    display: block;
    background-color: #1118;
    --_radius : calc(10px + var(--_padding) * 2);

    animation: reveal linear both;
    animation-timeline: view();
    animation-range: entry 20% cover 32%;
  }

  
  .inner-card{
    background-color: #18181888;
    --_radius : calc(10px + var(--_padding));
    z-index: 2;
    padding-inline: clamp(3ch,8vw,3rem);
    padding-block: 1rem 0;
    transition: border-color .3s ease-out;
    display: grid;
    grid-template-rows: 1fr auto;
  }


  .outer-card::before, .inner-card::before{
    content: '';
    position: absolute;
    width: 80%;
    height: 1px;
    top: -1px;
    background: radial-gradient(ellipse, white 10%, transparent 50%);
    left: 50%;
    translate: -50% 0;
    
    
  }

  .inner-card::after{
    content: '';
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border-radius: var(--_radius);
    z-index: -1;
    background: radial-gradient(circle at bottom, var(--_clr) 40%, var(--_clr-t), transparent);
    opacity: 0;
    transition: opacity .3s ease-out;
    filter: blur(7px);
  }

  header{
    display: grid;
    gap: .5rem;

    & p {
      color: var(--clr-body);
    }
  }

  .wrapper-img{
    overflow: hidden;
    padding: 0;
    height: max-content;
  }

  .outer-card:hover{

    & img{
      translate: 0 3rem;
      border-color: var(--_clr);
    }

    & .inner-card{
      border-color: #666;
      &::after{
        opacity: 1;
      }
    }

    
  }
  


  img{
    border: 1px solid #666;
    border-radius: 10px;
    width: 100%;
    translate: 0 clamp(0rem, 20%, 4rem);
    transition: translate .3s ease-out, box-shadow .4s ease-out;
  }

  @keyframes reveal {
    from{
      opacity: 0;
      scale: .9;
      translate: 0 12rem;
    }
  }

</style>